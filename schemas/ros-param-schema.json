{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ROS Parameter File",
    "description": "Schema for ROS parameter YAML files",
    "type": "object",
    "properties": {
        "simulation_settings": {
            "type": "object",
            "properties": {
                "dt": {
                    "type": "number",
                    "description": "Time step for simulation"
                },
                "total_time": {
                    "type": "number",
                    "description": "Total simulation time"
                },
                "num_drones": {
                    "type": "integer",
                    "description": "Number of drones in simulation"
                }
            }
        },
        "controller_settings": {
            "type": "object",
            "properties": {
                "pid": {
                    "type": "object",
                    "properties": {
                        "kp": {
                            "type": "number",
                            "description": "Proportional gain"
                        },
                        "ki": {
                            "type": "number",
                            "description": "Integral gain"
                        },
                        "kd": {
                            "type": "number",
                            "description": "Derivative gain"
                        },
                        "output_min": {
                            "type": "number",
                            "description": "Minimum output value"
                        },
                        "output_max": {
                            "type": "number",
                            "description": "Maximum output value"
                        }
                    }
                },
                "fls": {
                    "type": "object",
                    "properties": {
                        "enable": {
                            "type": "boolean",
                            "description": "Enable fuzzy logic controller"
                        },
                        "params_file": {
                            "type": "string",
                            "description": "Path to fuzzy parameters file"
                        }
                    }
                }
            }
        },
        "scenario_settings": {
            "type": "object",
            "properties": {
                "enable_wind": {
                    "type": "boolean",
                    "description": "Enable wind effects"
                },
                "formation_side_length": {
                    "type": "number",
                    "description": "Side length of formation"
                },
                "formation": {
                    "type": "object",
                    "properties": {
                        "initial_positions": {
                            "type": "object",
                            "patternProperties": {
                                "^drone_[0-9]+$": {
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    },
                                    "minItems": 2,
                                    "maxItems": 2,
                                    "description": "Initial position [x, y]"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}